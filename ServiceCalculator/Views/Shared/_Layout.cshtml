<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/FontAwesome/css/all.css" rel="stylesheet" />

</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>


    <div class="fixed-top shadow">

        <nav class="navbar navbar-expand-lg navbar-dark py-1" style="background-color: #5bc0de; padding-left: 0.1rem; height: 65px">
            <div class="navbar-brand responsive1 bg-dark rounded shadow">
            </div>
            <div class="navbar-nav mr-auto">

                <a class="navbar-brand" runat="server" href="~/Help">
                    <h2 class="responsive"><i class="fas fa-calculator" style="filter: contrast(100%);"></i>&nbsp;Calculator</h2>
                </a>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                </div>

            </div>

        </nav>

    </div>



    <div class="container-fluid" style="margin-top: 70px; padding-right: 100px; padding-left: 100px; margin-bottom: 80px">
        @RenderBody()
        @*<hr />*@
        <footer class="py-1 fixed-bottom bg-dark" style="height: 30px">
            <p class="m-0 text-center text-white" style="font-size: small">&copy; @DateTime.Now.Year - Calculator</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
